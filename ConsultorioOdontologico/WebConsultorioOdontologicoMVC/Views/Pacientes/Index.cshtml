@model IEnumerable<WebConsultorioOdontologicoMVC.Models.Paciente>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>CONSULTORIO ODONTOLÓGICO :::PACIENTES:::</h1>

<p>
    <a asp-action="Create">
        <i class="fa-solid fa-calendar-plus"></i>Crear nuevo Paciente
    </a>
</p>
<table class="table">
   <tbody>
    <thead>
        <tr>
            <th>Nombre Completo</th>
            <th>Cedula de Identidad</th>
            <th>Alergías</th>
            <th>Fecha de Nacimiento</th>
            <th>Celular</th>
            <th>Usuario Registro</th>
            <th>Fecha Registro</th>
            <th>Estado</th>
            <th></th>
        </tr>
    </thead>
   <tbody>
   <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombres)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CedulaIdentidad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Alergias)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaNacimiento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Celular)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UsuarioRegistro)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaRegistro)
            </td>
            <td>
                            @(item.Estado == 1 ? "Activo" : "Inactivo")
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdPersonalNavigation.Id)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Detalles</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
